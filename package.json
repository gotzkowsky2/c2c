{
  "name": "german-expat-c2c-platform",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:client\"",
    "dev:server": "MONGO_URI=mongodb://127.0.0.1:27017/german-expat-c2c JWT_SECRET=change_this_to_a_secure_random_string PORT=3001 nodemon server/server.js",
    "dev:client": "npm --prefix client run dev",
    "build:client": "next build client",
    "start:client": "next start client -p 3000",
    "seed": "node server/scripts/seed.js"
  },
  "dependencies": {
    "axios": "^1.7.4",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.6.1",
    "morgan": "^1.10.0",
    "next": "^14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.4"
  }
}


